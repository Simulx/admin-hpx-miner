{
  "name": "hpx-miner-monorepo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "npm@10.5.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "changeset": "changeset",
    "release": "turbo run build --filter=...[changeset-dependent] && changeset publish"
  },
  "devDependencies": {
    "turbo": "^2.0.6",
    "@changesets/cli": "^2.27.1"
  }
}